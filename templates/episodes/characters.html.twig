{% extends 'base.html.twig' %}
{% block title %}
  {% if episode %}Characters in Episode "{{ episode.name }}"{% else %}Episode Not Found{% endif %}
{% endblock %}
{% block body %}
  <div class="max-w-2xl mx-auto py-8">
    {% if episode %}
      <h1 class="text-2xl font-bold text-blue-600 mb-2">Characters in Episode "{{ episode.name }}" ({{ episode.episode }})</h1>
      {% include 'components/_nav_links.html.twig' %}
      <p class="mb-6 text-gray-500">Air date: {{ episode.air_date }}</p>
      {% if characters is not empty %}
        <ul class="space-y-4">
          {% for char in characters %}
            <li class="bg-white rounded-lg shadow p-4 flex flex-col sm:flex-row sm:items-center justify-between">
              <span>
                <strong class="text-blue-700">{{ char.name }}</strong> â€“ {{ char.species }}, {{ char.status }}
              </span>
              <a href="{{ path('character_detail', {id: char.id}) }}"
                 class="mt-2 sm:mt-0 inline-block text-sm px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-700 transition">
                View Details
              </a>
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p class="italic text-gray-500">No characters listed for this episode.</p>
      {% endif %}
    {% else %}
      <h1 class="text-2xl font-bold text-red-600 mb-2">Episode not found</h1>
      <p class="text-gray-600">Sorry, we couldn't find an episode named/ID "{{ episodeIdOrName }}"</p>
    {% endif %}
  </div>
{% endblock %}